{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "ES2016",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "pages",
    "utils",
    "config"
  ]
}